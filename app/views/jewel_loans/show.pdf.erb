<style>
  body{line-height: 28px; font-size: 16px;}
  table {
    border-collapse: collapse;
    width: 100%;
  }

  table.bordered { margin-bottom: 15px }
  .header th{width: 250px}

  h2, h3, h4, h5{margin-bottom: 8px; margin-top: 8px}

  .bordered tr td, .bordered tr th {
    border: 1px solid black;
    padding: 8px;
    vertical-align: top;
  }

  .center { text-align: center; }

  .no-border { border: none; }

  .signature-space { margin-top: 40px; }

  .page-break {
    page-break-after: always;
    border: none;
    margin: 50px 0;
  }

  .indent { margin-left: 20px; }

  .signature-line {
    margin-top: 40px;
    margin-bottom: 20px;
  }

 

  .row {
    display: flex;
    justify-content: space-between;
    margin-top: 20px;
  }

  .bold { font-weight: bold; }

  .underline {
      border-bottom: 1px dotted black;
      
      padding-bottom: 2px;
      min-width: 200px;
      padding-left: 5px;
      padding-right: 5px;
    }
   .page, .page-break { page-break-after: always; }
</style>

