<%= image_tag "logo.png", class: "mb-4", width: "72" %>
<h1 class="h3 mb-3 fw-normal">Please sign in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-floating">
    <%= f.email_field :email, class: "form-control", placeholder: "name@example.com", autofocus: true %>
    <label for="user_email">Email address</label>
  </div>

  <div class="form-floating">
    <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
    <label for="user_password">Password</label>
  </div>

  <div class="checkbox mb-3">
    <%= f.check_box :remember_me %> Remember me
  </div>

  <%= f.submit "Sign in", class: "w-100 btn btn-lg btn-primary" %>
<% end %>

<p class="mt-5 mb-3 text-muted">&copy; <%= Time.current.year %></p>
