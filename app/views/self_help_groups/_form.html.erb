<%= form_with(model: @self_help_group, local: true) do |f| %>
  <% if @self_help_group.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@self_help_group.errors.count, "error") %> prohibited this SHG from being saved:</h4>
      <ul>
        <% @self_help_group.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :address, class: "form-label" %>
    <%= f.text_area :address, class: "form-control" %>
  </div>
 

  <h4 class="mt-4">SHG Members</h4>
  <div class="row">
    <% @self_help_group.shg_members.each_with_index do |member, i| %>

      <div class="col-md-6 mb-4">
        <div class="card">
          <div class="card-header">
            Member <%= i + 1 %>
          </div>
          <div class="card-body">
            <%= f.fields_for :shg_members, member do |mf| %>
              <%= mf.hidden_field :id %>
              <div class="row mb-2">
                <div class="col-md-6">
                  <%= mf.label :name %>
                  <%= mf.text_field :name, class: "form-control" %>
                </div>
                <div class="col-md-3">
                  <%= mf.label :age %>
                  <%= mf.number_field :age, class: "form-control" %>
                </div>
                <div class="col-md-3">
                  <%= mf.label :mobile %>
                  <%= mf.text_field :mobile, class: "form-control" %>
                </div>
              </div>

              <div class="row mb-2">
                <div class="col-md-6">
                  <%= mf.label :husband_or_father_name %>
                  <%= mf.text_field :husband_or_father_name, class: "form-control" %>
                </div>
                <div class="col-md-3">
                  <%= mf.label :aadhar_number %>
                  <%= mf.text_field :aadhar_number, class: "form-control" %>
                </div>
                <div class="col-md-3">
                  <%= mf.label :membership_no %>
                  <%= mf.text_field :membership_no, class: "form-control" %>
                </div>
                
              </div>

              <div class="row mb-2">
                <div class="col-md-4">
                  <%= mf.label :pan_number %>
                  <%= mf.text_field :pan_number, class: "form-control" %>
                </div>
                <div class="col-md-4">
                  <%= mf.label :income %>
                  <%= mf.text_field :income, class: "form-control" %>
                </div>
                <div class="col-md-4">
                  <%= mf.label :occupation %>
                  <%= mf.text_field :occupation, class: "form-control" %>
                </div>
              </div>
              <div class="row mb-2">
                 <div class="col-md-12">
                    <%= mf.label :door_number, "Door Number/House Name" %>
                    <%= mf.text_field :door_number, class: "form-control" %>
                 </div>
              </div>
              <div class="row mb-2">
                <div class="col-md-6">
                  <%= mf.label :village, "Place, Village and Post" %>
                  <%= mf.text_field :village, class: "form-control" %>
                </div>
                <div class="col-md-4">
                  <%= mf.label :taluk %>
                  <%= mf.text_field :taluk, class: "form-control" %>
                </div>
                <div class="col-md-2">
                  <%= mf.label :pin_code %>
                  <%= mf.text_field :pin_code, class: "form-control" %>
                </div>
              </div>

 

              <div class="row">
               
                <div class="col-md-4">
                  <% if mf.object.persisted? %>
                    <%= mf.label :_destroy, "Remove" %><br>
                    <%= mf.check_box :_destroy %>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-3">
    <%= f.submit "Save SHG", class: "btn btn-primary" %>
    <%= link_to 'Cancel', self_help_groups_path, class: "btn btn-secondary ms-2" %>
  </div>
<% end %>
