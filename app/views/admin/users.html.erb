<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">User Management</h1>
        <%= link_to "New User", admin_new_user_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Email</th>
                  <th>Role</th>
                  <th>Branch</th>
                  <th>Created</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td><%= user.email %></td>
                    <td>
                      <span class="badge bg-<%= case user.role
                                                when 'super_admin' then 'danger'
                                                when 'admin' then 'warning'
                                                when 'manager' then 'info'
                                                else 'secondary'
                                              end %>">
                        <%= user.role.humanize %>
                      </span>
                    </td>
                    <td>
                      <% if user.cooperative_branch %>
                        <%= link_to user.cooperative_branch.name, admin_show_branch_path(user.cooperative_branch), 
                            class: "text-decoration-none" %>
                      <% else %>
                        <span class="text-muted">No branch assigned</span>
                      <% end %>
                    </td>
                    <td><%= user.created_at.strftime("%B %d, %Y") %></td>
                    <td>
                      <%= link_to "Edit", admin_edit_user_path(user), class: "btn btn-sm btn-outline-secondary" %>
                      <% unless user.super_admin? %>
                        <%= link_to "Delete", admin_destroy_user_path(user), 
                              method: :delete, 
                              data: { confirm: "Are you sure? This action cannot be undone." },
                              class: "btn btn-sm btn-outline-danger" %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>