<%# Link to the "First" page
  - available local variables
    url:           url to the first page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<li class="first <%= 'disabled' if current_page.first? %>">
  <%= link_to_unless current_page.first?, raw('<i class="material-icons">first_page</i>'), url, remote: remote, data: { turbo: false } do %>
    <span><i class="material-icons">first_page</i></span>
  <% end %>
</li>
